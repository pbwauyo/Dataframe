<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>

            <solid android:color="#00ab66"/>

            <stroke android:width="3dp"
                android:color="#ffb116"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>

            <solid android:color="#54b948"/>

            <stroke android:width="3dp"
                android:color="#ffb116"/>


        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp" android:topLeftRadius="6dp" android:topRightRadius="6dp" />

            <gradient android:startColor="#fed6e3"
                android:endColor="#a8edea"
                android:angle="45"/>

            <stroke android:width="3dp"
                android:color="#cca8edea"/>

        </shape>
    </item>

</selector>
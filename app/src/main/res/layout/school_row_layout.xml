<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:id="@+id/school_badge"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <com.m2x.avatarview.AvatarView
            android:id="@+id/placeholder"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textColor="#ffffff"
            app:avtv_fit_text_length="1"
            app:avtv_random_fill_color="true"
            app:avtv_text_size="18sp"
            app:avtv_border_color="#d4af37"
            app:avtv_border_width="2dp"/>

        <TextView
            android:id="@+id/school_name"
            android:text="Mengo Senior School"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="0dp"
            android:gravity="center|start"
            android:background="@drawable/text_view_states"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_height="match_parent" />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
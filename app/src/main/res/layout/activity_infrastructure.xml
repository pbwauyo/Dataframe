<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gpb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.TextInputLayoutAppearance"
    tools:context=".InfrastructureActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/menu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"/>

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <LinearLayout

            android:layout_marginTop="16dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/infrastructure_spinner"
                android:background="@drawable/edit_text_style"
                android:hint="Select infrastructure"
                android:textColorHint="@color/customTextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintTextAppearance="@style/TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/number_of_items"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text_style"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Infrastructure number"
                    android:padding="5dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/infrastructure_type_spinner"
                android:hint="Infrastructure type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/edit_text_style"
                android:layout_marginBottom="16dp"/>

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner

                android:id="@+id/completion_status_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Completion status"
                android:background="@drawable/edit_text_style"
                android:padding="5dp"
                android:layout_marginBottom="16dp"/>

            <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
                android:id="@+id/infrastructure_progress_bar"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                gpb:type="chrome_floating_circles"
                gpb:colors="@array/progress_bar_colors"/>

            <RadioGroup
                android:id="@+id/in_use_radio_grp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="In use"/>

                <me.omidh.liquidradiobutton.LiquidRadioButton
                    android:id="@+id/yes_radio_btn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    app:lrb_strokeWidth="1dp"
                    app:lrb_explodeCount="3"
                    app:lrb_outterPadding="8dp"
                    app:lrb_innerCircleRadius="15dp"
                    app:lrb_strokeRadius="15dp"
                    app:lrb_inAnimDuration="500"
                    app:lrb_outAnimDuration="500"
                    app:lrb_checkedColor="@android:color/holo_green_dark"
                    app:lrb_unCheckedColor="@android:color/holo_red_light"
                    android:text="Yes"
                    android:layout_marginEnd="8dp"/>

                <me.omidh.liquidradiobutton.LiquidRadioButton
                    android:id="@+id/no_radio_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:lrb_strokeWidth="1dp"
                    app:lrb_explodeCount="3"
                    app:lrb_outterPadding="8dp"
                    app:lrb_innerCircleRadius="10dp"
                    app:lrb_strokeRadius="15dp"
                    app:lrb_inAnimDuration="500"
                    app:lrb_outAnimDuration="500"
                    app:lrb_checkedColor="@android:color/holo_green_dark"
                    app:lrb_unCheckedColor="@android:color/holo_red_light"
                    android:text="No" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintTextAppearance="@style/TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/number_of_employees"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text_style"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Number of Employees"
                    android:padding="5dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/submit_infrastructure_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:layout_gravity="center"
                android:background="@drawable/button_layout_style"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>